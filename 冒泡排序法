/*
  冒泡排序法将两个值进行比较选出最大值，然后将其放在最后，以此类推将剩下的数值进行比较，得出次最大值。
*/
#include <iostream>
using namespace std;
void bubble(int arr[],int n)
{
  int tmp=0;
  for(int i=0; i < n-1; i++)
  {
    if(arr[i] > arr[i+1])
    {
        tmp=arr[i+1];
        arr[i+1]=arr[i];
        arr[i]=tmp;
    }
  }
}

void bubblesort(int arr[],int n)
{
    for(int i=n;i >= 1; i--)
    {
        bubble(arr,i);
    }
}

int main(){
  int arr[]={8484,165,56084,46521561,3460,52513,1561,151};
  bubblesort(arr,8);
  for(int i=0; i < 8; i++)
  {
    cout<<arr[i]<<endl;
  }
  return 0;
}
